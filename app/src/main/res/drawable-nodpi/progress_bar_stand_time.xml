<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Define the background properties like color etc -->
    <item android:id="@android:id/background">
        <shape>
            <gradient

                android:startColor="#24ff27"
                android:centerColor="#24ff27"
                android:centerY="1.0"
                android:endColor="#24ff27"
                android:angle="270"
                />
        </shape>
    </item>

    <!-- Define the progress properties like start color, end color etc -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:startColor="#ff0a18"
                    android:centerColor="#ff0a18"
                    android:centerY="1.0"
                    android:endColor="#ff0a18"
                    android:angle="0"
                    />
            </shape>
        </clip>
    </item>
</layer-list>